<div class="jumbotron">
  <h1>Music Wall</h1> 
</div>
<div class="error_message"><% if @message %>

  <% @message.errors.full_messages.each do |m| %>

   <span class="error_message">Please fix: <%= m %></span>

   <% end %>
   <% end %>
</div>

<div id="login_box">
  <% if session[:user] %>
    Logged in as: <span class="text-warning text-uppercase"><%= session[:user].user_name%></span>
    <form method="POST" action="/logout">
      <input type='submit' value='Logout'>
    </form>
  <% else %>
    <%= @login_failure_message %>
    <form method="POST" action="/login">
      <input type="text" name="user_name" placeholder="user name">
      <input type="password" name="password" placeholder="password">
      <input type="submit" value="Login/Sign up">

    </form>
  <% end %>
</div>
<% if session[:user] %>
  <div id="addSong">
    <form method="POST" action="/messages">
      <div>
        <label>Song Title:</label>
        <input type="text" name="title" value="<%= @message && @message.title %>">
      </div>
      <div>
        <label>Author:</label>
        <input type="text" name="author" value="<%= @message && @message.author %>">
      </div>
      <div>
        <label>URL:</label>
        <input type="text" name="url" value="<%= @message && @message.url %>">
      </div>
      <div>
        <input type="submit" value="Contribute">
      </div>
    </form>
  </div>
<% end %>
<div id="messages_container">
  <!-- Here comes all messages -->
  <% if @messages %>
    <% @messages.each do |message| %>
      <div class="message">
        <p>
          <%= message.author %>
          <% if session[:user] %>
          <div class="upvote">
            <span class="upvote_text"><%= Upvote.where(message_id: message.id).count %></span>
            <img data-id="<%= message.id %>"src="https://upload.wikimedia.org/wikipedia/commons/7/7e/Thumbs-up-icon.png"/>
          </div>
          <% end %>  
          <p class="message_title"><%= message.title %> <br></p>
          <a href="<%= message.url if message.url%>">Go to link!</a> <br>
          <span class="time"><%= message.created_at %></span>
          <% if session[:user] %>
            <form id="review_form" method="POST" action="/reviews">
              <textarea name="content" placeholder="Write review here."></textarea>
              <select name="rating">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                  </select>
              <input type="hidden" name="message_id" value="<%= message.id %>">
              <input type="submit" value="Review" class="review_button">
            </form>
            <div id="review_list">
              <% Review.where(message_id: message.id).each do |rev| %>
              <% if session[:user].id == rev.user_id %>
                <form method="POST" action="/remove_review"> 
                  <input type="hidden" name="review_id" value="<%= rev.id %>">
                  
                  <input type="submit" value="REMOVE">
                </form>
              <% else %>
                <span>BY: <%= User.find(rev.user_id).user_name %></span>
              <% end %>
                <p><%= rev.content %></p>
              <% end %>
            </div>
          <% end %>

        </p>
      </div>
    <% end %>
  <% end %>
</div>
